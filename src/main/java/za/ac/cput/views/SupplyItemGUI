    public BookItemPanel(Book b) {
      setLayout(new GridLayout(5, 1));
      setBorder(new EmptyBorder(10, 10, 10, 10));
      setBackground(Color.LIGHT_GRAY);

      titleLabel = new JLabel("Title: " + b.title);
      authorLabel = new JLabel("Author: " + b.author);
